
@{ 
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<body ng-app="app.Programacion" block-ui="main">
</body>
 
<div id="IdBandejaSolicitudController" ng-app="app.Programacion" ng-controller="ReporteCuadroVacacionalController as vm">
    <div class="panel panel-default">
        <div class="panel-body">
            <div class='col-xs-12 col-sm-12'>
                 
                <div class='form-group'>

                    <h4 class="modal-title">Programación</h4>
                    <h5 class="font-bold"><br /><br /></h5>
                    <div id="divAlert" class="alert-edit">
                    </div>
                </div>

                <div class='form-group'>
                    <div class='col-xs-12  col-sm-6 '>
                        <h5> Lider : </h5>
                        <input type="text" class="form-control" ng-model="vm.Usuario"
                               data-animation="am-flip-x"
                               bs-options="items as items.Descripcion for items in vm.BuscarUnidad($viewValue)"
                               placeholder="Ingrese el CCR" bs-typeahead>       
                    </div>                   
                </div>
               
                
                <div class='form-group text-right'>
                    <div class='col-xs-12  col-sm-6 col-sm-6'>
                        <br /><br />
                        <button id="btnLimpiar" button class="btn btn-primary" text-right" ng-click="vm.LimpiarFiltros()">
                            <span class="glyphicon glyphicon-trash"></span> Limpiar
                        </button>
                        <button id="btnBuscar" button class="btn btn-primary" ng-click="vm.Buscar()">
                            <span class="glyphicon glyphicon-search"></span> Buscar
                        </button>
                    </div>
                </div>
                   
                <iframe id="FReporte" height="620" width="100%" name="FReporte" frameborder="0" scrolling="yes"></iframe>
 
            </div>
        </div>
    </div>

    
  
</div>


@section scripts{         
    @Scripts.Render("~/bundles/app/Trabajador/js") 
    @Scripts.Render("~/bundles/app/Programacion/ReporteCuadroVacacional/js") 
}
