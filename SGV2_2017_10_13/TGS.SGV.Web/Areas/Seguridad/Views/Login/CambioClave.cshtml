@{
    Layout = "~/Views/Shared/_Login.cshtml";
}
  

<div class="login-center" ng-app="app.Seguridad" ng-controller="CambioClaveController as vm">
    <div class="container min-height">
        <div class="row">
            <div class="col-xs-4 col-md-offset-2">
                <div class="login" id="card">
                    <div id="divAlert"> </div>
                    <div class="front signin_form">
                        <p><div class="logo-img"></div> </p>
                       
                        <form class="login-form">                            
                            <div class="form-group">
                                <label for="name" class="cols-sm-2 control-label">Usuario</label>
                                <div class="cols-sm-10">
                                    <div class="input-group">                                        
                                        <input type="text" class="form-control" ng-model="vm.TxtUsuario" placeholder="Usuario">
                                        <span class="input-group-addon">
                                            <i class="glyphicon glyphicon-user"></i>
                                        </span>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="name" class="cols-sm-2 control-label">Contraseña</label>
                                <div class="cols-sm-10">
                                    <div class="input-group">
                                        <input type="password" class="form-control" ng-model="vm.TxtClave" placeholder="Contraseña Actual">
                                        <span class="input-group-addon">
                                            <i class="glyphicon glyphicon-lock"></i>
                                        </span>
                                    </div>
                                </div>
                            </div> 

                            <div class="form-group">
                                <label for="name" class="cols-sm-2 control-label">Nueva contraseña</label>
                                <div class="cols-sm-10">
                                    <div class="input-group">
                                        <input type="password" class="form-control" ng-model="vm.TxtNuevaClave" placeholder="Nueva contraseña">
                                        <span class="input-group-addon">
                                            <i class="glyphicon glyphicon-lock"></i>
                                        </span>
                                    </div>
                                </div>
                            </div> 
                             
                            <div class="form-group">
                                <label for="name" class="cols-sm-2 control-label">Confirmar contraseña</label>
                                <div class="cols-sm-10">
                                    <div class="input-group">
                                        <input type="password" class="form-control" ng-model="vm.TxtConfirmarClave" placeholder="Confirmar contraseña">
                                        <span class="input-group-addon">
                                            <i class="glyphicon glyphicon-lock"></i>
                                        </span>
                                    </div>
                                </div>
                            </div> 
                              
                            <div class="form-group sign-btn">                                
                                    <div class="controls">
                                        <span class="pull-left">
                                            <button type="submit" ng-click="vm.CambioClave()" class="btn btn-primary  ">
                                                <span class="glyphicon glyphicon-ok"></span> Cambiar clave
                                            </button>&nbsp;

                                            <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Index", "Login", new { })'">
                                                <span class="glyphicon glyphicon-ok icon-hand-left"></span> Regresar
                                            </button>
                                        </span>
                                    </div>
                                
                            </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>
</div>

@section scripts{
    @Scripts.Render("~/bundles/app/seguridad/cambioclave/js")
}